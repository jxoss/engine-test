{
  "client": {
    "config": {
        "title": "Engine Tests",
        "templates": {
            "def": {
                "to": ".section",
                "html": "/tests.html"
            },
            "item": {
                "to": ".section tbody",
                "html": "/test_item.html"
            }
        },
        "defaultTemplate": "def",
        "domEvents": [
            {
                "on": "click",
                "selector": "#createTest",
                "flow": "createTestBtn"
            }
        ]
    },
    "flow": [
        [
            "show",
            [":layout/state", "loader"],
            [":ALTR", {"data": {"clear": true}}],
            [":render", "def"],
            [">flow", "@api/getTests"],
            [":render", "item"],
            [":layout/state", "content"]
        ],
        [
            "createTestBtn",
            [":router/route", "/new"]
        ]
    ],
    "markup": [
      "/tests.html",
      "/test_item.html"
    ]
  },
  "roles": {
    "*": true
  },
  "name": "tests",
  "module": "view"
}
