{
  "client": {
    "config": {
        "title": "Engine Test",
        "templates": {
            "layout": {
                "to": "body",
                "html": "/layout.html",
                "render": true
            }
        },
        "defaultTemplate": "layout",
        "states": {
            "content": [
                {
                    "sel": ".loader",
                    "template": "layout",
                    "add": ["hide"]
                },
                {
                    "sel": ".section",
                    "template": "layout",
                    "rm": ["hide"]
                }
            ],
            "loader": [
                {
                    "sel": ".section",
                    "template": "layout",
                    "add": ["hide"]
                },
                {
                    "sel": ".loader",
                    "template": "layout",
                    "rm": ["hide"]
                }
            ]
        }
    },
    "markup": [
      "/layout.html"
    ],
    "styles": [
      "/bootstrap/css/bootstrap.min.css",
      "/bootstrap/css/bootstrap-theme.min.css",
      "/style.css"
    ]
  },
  "roles": {
    "*": true
  },
  "name": "layout",
  "module": "view"
}
